<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		  <h1>Editing Book</h1>
  		  <% if @book.errors.any? %>
          <%= @book.errors.count %>件のerrorsが発生しました %>
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
  		  <%= form_with model: @book, url: book_path(@book.id), method:"post", local: true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, id:"book_title", class:"form-control book_title"   %>
          </div>
          <div class="form-group">
            <label for="book_body">Opinion</label>
            <%= f.text_area :body, id:"book_body", class:"form-control book_body"  %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update Book', class:"btn btn-success" %>
          </div>
        <% end %>
        <ul class="inline">
          <li><%= link_to 'Show', book_path(@book.id), class:"book_36654" %></li>
          <li><p>|</p></li>
          <li><%= link_to 'Back', books_path, class:"back" %></li>
        </ul>
      </div>
    </div>
  </div>
</main>
