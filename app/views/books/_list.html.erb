 <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%=attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class:"attachment user profile_image fallback" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
	            <th>name</th>
	            <th><%= user.name %>  </th>
            </tr>
            <tr>
	            <th>introduction</th>
	            <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
　      <div class="row">
          <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block " do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <% if book.errors.any? %>
          <%= book.errors.count %>件のエラーが発生しました
          <% book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: book, url: books_path, method:"post", local: true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, id:"book_title", class:"form-control book_title"   %>
          </div>
          <div class="form-group">
            <label for="book_body">Opinion</label>
            <%= f.text_area :body, id:"book_body", class:"form-control book_body"  %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
